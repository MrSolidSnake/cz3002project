<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ClassicMode">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/classic_mode_next_btn"
        android:layout_toLeftOf="@+id/classic_mode_next_btn"
        android:layout_toStartOf="@+id/classic_mode_next_btn"
        android:id="@+id/classic_mode_ans_rad_grp">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New RadioButton"
            android:id="@+id/classic_mode_ans_1_rad_btn"
            android:checked="false"
            android:layout_above="@+id/classic_mode_ans_2_rad_btn"
            android:layout_alignParentLeft="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New RadioButton"
            android:id="@+id/classic_mode_ans_2_rad_btn"
            android:checked="false"
            android:layout_above="@+id/classic_mode_next_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New RadioButton"
            android:id="@+id/classic_mode_ans_3_rad_btn"
            android:checked="false"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/classic_mode_ans_1_rad_btn"
            android:layout_alignParentLeft="true" />

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/classic_mode_question_txt_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/classic_mode_next_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        />

    <ImageView
        android:id="@+id/classic_mode_person_img_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/classic_mode_ans_rad_grp"
        android:layout_below="@+id/classic_mode_question_txt_view"
        android:layout_gravity="center_horizontal"

         />

</RelativeLayout>
